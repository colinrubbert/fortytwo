<!-- Large modal -->
<div class="clear"></div>
<div class="col-xs-10 col-xs-offset-1 modal-42 hidden-xs">
  <button type="button" class="btn btn-42 btn-42-modal" data-toggle="modal" data-target=".request-modal">Request Assistance</button>
</div>
<div class="modal fade request-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="ft-box col-xs-10 col-xs-offset-1">
        <h1>Create a new request</h1>

        <%= simple_form_for @request do |f| %>
          <div class="col-xs-12 left">
            <%= f.input :name %>
          </div>
          <div class="clear"></div>
          <br />
          <div class="col-xs-12 left">
            <%= f.input :description %>
          </div>
          <div class="clear"></div>
          <br />
          <div class="col-xs-12 col-md-6 pull-left left">
            <%= f.input :phone, :placeholder => '555-555-5555' %>
          </div>
          <div class="col-xs-12 col-md-6 pull-right left">
            <%= f.input :email %>
          </div>
          <div class="clear"></div>
          <br/>
          <%= f.submit "Submit Request", :class => 'btn btn-42' %>
        <% end %>

        <br />
      </div>
    </div>
  </div>
</div>


