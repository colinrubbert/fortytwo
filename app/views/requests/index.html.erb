<div class="ft-box col-xs-10 col-xs-offset-1">
  <h1>Current Requests</h1>
  <% @requests.each do |request| %>
    <div class="col-xs-12 col-sm-6">
      <blockquote>
        <h3><u>Name:</u> <%= request.name %></h3>
        <h4><u>Description:</u> <br /><%= request.description %></h4>
        <h4><u>Phone:</u> <%= request.phone %></h4>
        <h4 class="hidden-xs"><u>Email:</u> <%= request.email %></h4>
        <h4><u>Request Submission:</u> <%= request.created_at %></h4>
      </blockquote>
    </div>
  <% end %>
</div>
