<div class="ft-box col-xs-10 col-xs-offset-1">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, :class => 'pull-left' %><br />
      <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
    </div>
    <br />
    <div class="field">
      <%= f.label :email, :class => 'pull-left' %><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password, :class => 'pull-left' %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password_confirmation, :class => 'pull-left' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit "Sign up", :class => 'btn btn-42' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
  <br />
</div>
